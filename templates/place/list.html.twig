{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des lieux</h1>

    <a href="{{ path('place_add') }}">Ajouter un lieu</a>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Rue</th>
            <th>Actions</th> <!-- Colonne pour les boutons d'action -->
        </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.nom }}</td>
                <td>{{ place.rue }}</td>
                <td>
                    <a href="{{ path('place_detail', { 'id': place.id }) }}">Details</a>
                    <a href="{{ path('place_edit', { 'id': place.id }) }}">Modifier</a>
                    <a href="{{ path('place_delete', { 'id': place.id }) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}