{% extends 'base.html.twig' %}

{% block title %}New Place{% endblock %}

{% block body %}
    <h1>Create new Place</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-success">
        Save
    </button>
    {{ form_end(form) }}

    <a href="{{ path('outing_create') }}" class="btn btn-danger">
        Cancel
    </a>

    <div id="suggestions" style="position: absolute; background: white; z-index: 99;"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('JS/place_form.js') }}"></script>
{% endblock %}
