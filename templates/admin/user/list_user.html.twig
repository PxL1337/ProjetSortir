{% extends 'admin/dashboard.html.twig' %}

{% block title %}Users list | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Users list</h1>

    <button id="filter-button" class="btn btn-primary">Filter</button>
    <button id="sort-button" class="btn btn-primary">Sort</button>

    <form id="filter-form" class="d-none">
        {{ form_start(filter_form) }}
        <div class="filter-field">
            {{ form_row(filter_form.role) }}
            {{ form_row(filter_form.campus) }}
        </div>
        <div class="sort-field d-none">
            {{ form_row(filter_form.sort) }}
        </div>
        {{ form_end(filter_form) }}
    </form>

    <div class="table-container">
        <table class="table">
            <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Campus</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
            </thead>
        </table>
        <div class="table-list-container">
            {% include 'admin/user/_list_user_table.html.twig' with {'users': users} %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('JS/adminUserListLoadingTest.js') }}"></script>
    {{ parent() }}
{% endblock %}