{% extends 'admin/dashboard.html.twig' %}

{% block title %}
    {{ parent() }} | Editing {{ campus.nom }}
{% endblock %}

{% block body %}
    <div class="editing-data-form-wrapper">
        <h1>Editing {{ campus.nom }}</h1>

        <div class="editing-data-form-container">
            {{ form_start(form) }}
            {{ form_widget(form) }}
        </div>
        <section class="generic-actions-buttons-section">
            <button type="submit" class="button-positive-action">
                Save modifications
            </button>
        </section>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('admin_dashboard') }}">
        Back to list
    </a>
{% endblock %}
