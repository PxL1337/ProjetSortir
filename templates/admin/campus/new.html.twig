{% extends 'admin/dashboard.html.twig' %}

{% block title %}
    {{ parent() }} | Creating new campus
{% endblock %}

{% block body %}
    <div class="data-view-wrapper">
        <div class="data-view-container">
            <div class="data-view-action-content">
                <h1 class="data-view-action-title">
                    Create new campus
                </h1>

                <div class="data-view-add-form">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <span>
                        <button type="submit">
                            Create
                        </button>
                    </span>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="data-view-bottom-section">
            <a href="{{ path('admin_dashboard') }}" class="button-back">
                Back to list
            </a>
        </div>
    </div>
{% endblock %}
