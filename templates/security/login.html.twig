{% extends 'base.html.twig' %}
{% block extrastyles %} <link rel="stylesheet" href="{{ asset('css/login.css') }}"> {% endblock %}
{% block title %}Log in!  | {{ parent() }}{% endblock %}

{% block body %}
    <div class="form-block">
        <div class="content">
            <section class="header">
                {# TITLE #}
                <h2 class="title">Please sign in</h2>
            </section>

            <form method="post">
                {# ERROR MESSAGE(S) #}
                {% if error %}
                    <section class="error-container">
                        <p id="error-message">{{ loginError_Message }}</p>
                    </section>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                {# FORM FIELDS #}
                <section class="row">
                    {# EMAIL FIELD #}
                    <label for="inputUsername">Username</label>
                    <span></span>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                           class="form-control" placeholder="Type your username" autocomplete="inputUsername"
                           required autofocus>
                </section>

                {# PASSWORD FIELD #}
                <section class="row">
                    <label for="inputPassword">Password</label>
                    <span></span>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           placeholder="Type your password"
                           autocomplete="current-password" required>
                </section>

                {# CSRF TOKEN #}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {# SUBMIT BUTTON #}
                <section class="submit-btn">
                    <input type="submit" class="btn" value="Login">
                </section>

                {# Remember me #}
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                {# Forgot password - with link towards regitration page #}
                {#<section class="signUp-redirection">
                    <p>Not a member?</p>
                    <a href="{{ path('app_register') }}">Sign up</a>
                </section>#}


            </form>
            <section class="forgotpassword">
                <a href="{{ path('app_forgot_password_request')}}" title="reset password">Forgot your password ?</a>
            </section>
        </div>
    </div>

{% endblock %}
